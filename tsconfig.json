{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ES2019",
        "moduleResolution": "node",
        "baseUrl": ".",
        "outDir": "dist",
        "typeRoots": [
            "src/types",
            "node_modules/@types"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "lib": [
            "ES2019",
            "esnext",
            "dom"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}